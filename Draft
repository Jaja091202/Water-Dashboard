    </div>
    <div id="settings" class="content"> <button onclick="showPage('dashboard')">Go
        to Dashboard</button> </div>
    <script>
        function showPage(page) {
            document.querySelectorAll('.content').forEach(function(el) {
                el.classList.remove('active');
            });
            document.getElementById(page).classList.add('active');
            if (page === 'dashboard') {
                document.body.style.backgroundImage = 'url("https://github.com/Jaja091202/Water-Dashboard/blob/main/Dashboard%20HD.png?raw=true")';
            } else if (page === 'settings') {
                document.body.style.backgroundImage = 'url("https://github.com/Jaja091202/Water-Dashboard/blob/main/Dashboard%20(2).png?raw=true")';
            }
        }
    </script>
    
  </body>
